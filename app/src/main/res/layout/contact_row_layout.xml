<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="15dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/contact_row_layout_contact_logo"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="4dp" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/contact_row_layout_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily=""
                android:text="First Name"
                android:textStyle="normal"
                android:textSize="20dp"
                android:layout_toRightOf="@id/contact_row_layout_contact_logo"
                android:textColor="@color/colorPrimary"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/contact_row_layout_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily=""
                android:text="Last Name"
                android:textStyle="normal"
                android:textSize="20dp"
                android:layout_toRightOf="@id/contact_row_layout_first_name"
                android:textColor="@color/colorPrimary"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/contact_row_layout_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily=""
                android:text="Last Name"
                android:textStyle="normal"
                android:textSize="20dp"
                android:layout_toRightOf="@id/contact_row_layout_contact_logo"
                android:layout_below="@+id/contact_row_layout_first_name"
                android:textColor="@color/colorPrimary"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/contact_row_layout_contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily=""
                android:text="Contact Number"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_toRightOf="@id/contact_row_layout_contact_logo"
                android:layout_below="@+id/contact_row_layout_email"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/contact_row_layout_delete_logo"
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="-90dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/contact_row_layout_email"
                android:layout_toRightOf="@+id/contact_row_layout_contact_number"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>